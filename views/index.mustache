<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="style.css">
    <title></title>
  </head>
  <body>
    <h2>To do list</h2>
    <form class="" action="/" method="post">
      <input type="text" name= "newItem" value="{{newItem}}" placeholder="add a to do">
      <input type="submit" value="submit">
    </form>

    <ul>
      {{#list}}
        {{^complete}}
          <li class="incomplete"><input type="button" class="completeButton" value="Complete"> {{task}}</li>
        {{/complete}}
      {{/list}}

      {{#list}}
        {{#complete}}
          <li class="">{{task}}</li>
        {{/complete}}
      {{/list}}
    </ul>


    <script src="script.js"></script>
  </body>
</html>
